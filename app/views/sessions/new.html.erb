<% provide(:title, "Sign In") %>

<h1>Sign in</h1>

<div class="row">
  <div class="formulario">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "submit-bt" %>
    <% end %>
  </div>
</div>